{{#partial "contenido" }}
<select name="Sector" id="globalstyleselect" onchange="myFunction()">
  <option value="0">Seleccion</option>
  <option value="1">Palermo</option>
  <option value="2">Villa Urquiza</option>
  <option value="3">Lugano</option>
  <option value="4">Salta</option>
</select>

