      <th scope="col">Sector</th>
      <th scope="col">Organizacion</th>
      <th scope="col">Huella de carbono</th>
    </tr>
  </thead>
  <tbody>
    {{#each huellaDeSectores.[0].organizaciones}}
    <tr>
      <td>Palermo</td>
      <td>{{this.razonSocial}}</td>
      <td>{{this.huellaAnual}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>

